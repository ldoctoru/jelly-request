<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>Jelly-Request</Name>
  <Repository>tophat17/jelly-request:latest</Repository>
  <Registry>https://hub.docker.com/r/tophat17/jelly-request</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/tophat17/jelly-request/issues</Support>
  <Project>https://github.com/tophat17/jelly-request</Project>
  <Overview>Scrape IMDb's Most Popular Movies and automatically request them in Jellyseerr, ideal for keeping your media library up-to-date.</Overview>
  <Category>MediaServer:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/tophat17/jelly-request/main/template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/tophat17/jelly-request/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>Jellyseerr instance</Requires>
  <Config Name="Jellyseerr URL" Target="JELLYSEERR_URL" Default="http://192.168.0.29:5054" Mode="" Description="URL of your Jellyseerr instance (e.g., http://your-ip:5054)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="API Key" Target="API_KEY" Default="" Mode="" Description="Jellyseerr API key (found in Jellyseerr settings)" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="IMDb URL" Target="IMDB_URL" Default="https://www.imdb.com/chart/moviemeter" Mode="" Description="IMDb chart URL to scrape" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Movie Limit" Target="MOVIE_LIMIT" Default="50" Mode="" Description="Number of movies to scrape from IMDb" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Run Interval (Days)" Target="RUN_INTERVAL_DAYS" Default="7" Mode="" Description="Interval between script runs in days (e.g., 7 for weekly)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Debug Mode" Target="DEBUG_MODE" Default="SIMPLE" Mode="" Description="Logging mode: SIMPLE (minimal) or VERBOSE (detailed)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Log Path" Target="/logs" Default="/mnt/user/appdata/jelly-request/logs" Mode="rw" Description="Host path for log files" Type="Path" Display="always" Required="true" Mask="false"/>
</Container>
